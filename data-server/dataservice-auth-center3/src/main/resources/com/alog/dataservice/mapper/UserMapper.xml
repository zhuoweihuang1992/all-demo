<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.alog.dataservice.mapper.UserMapper">
    <select id="findByUsername" resultType="com.alog.dataservice.entity.User">
      SELECT * FROM user
      where
      username=#{username}
    </select>
    <select id="findUserById" resultType="com.alog.dataservice.entity.User">
        SELECT * FROM user
      where
      id=#{Id}
    </select>
    <insert id="save" parameterType="com.alog.dataservice.entity.User">
        insert into user (username,password) values ({userName},{passWord})
    </insert>
</mapper>